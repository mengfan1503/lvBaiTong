
page,
.content{
	width: 100%;
	height: 100%;
	background-size: 100% auto ;
	padding: 0;
}
.swiper{
	width: 100%;
	height: 100%;
	background: #FFFFFF;
}
.swiper-item {
	margin-top: 100rpx;
	width: 100%;
    height: 100%;
	text-align: center;
	position: relative;
	display: flex;
	/* justify-content: center; */
	align-items:flex-end;
	flex-direction:column;
}
.swiper-item-img{
	width: 100%;
	height: 400rpx;
	margin: 0 auto;
	margin-top: 200rpx;
}
.swiper-item-tex{
	width: 100%;
	height: auto;
	
	padding-top: 100rpx;
}
.uniapp-img{
	height: 20%;
	background: #FFFFFF;
	display: flex;
	justify-content: center;
	align-items:center;
	overflow: hidden;
}
.uniapp-img image{
	width: 20%;
}
.jump-over,.experience{
	position: absolute;
	height: 60rpx;
	line-height: 60rpx;
	padding: 0 40rpx;
	border-radius: 30rpx;
	font-size: 30rpx;
	color: #87CEFF;
	border: 1px solid #87CEFF;
	z-index: 999;
}
.jump-over{
	right: 45rpx;
	top: 125rpx;
}
.experience{
	margin-top:20rpx;
	right: 50%;
	margin-right: -105rpx;
	bottom: 150rpx;
}

