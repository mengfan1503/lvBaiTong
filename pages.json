			"path": "pages/index/index",
			"style": {
				"app-plus":{
					"titleNView":false
				}

			}
		},
        {
			"path": "pages/guide/guide",
			"style": {
				"app-plus": {
					"titleNView": false //禁用原生导航栏
				}
			}
		},
		{
			"path": "pages/map/map",
			"style": {
				"navigationBarTitleText":"机器人分布地图",
				"navigationBarBackgroundColor": "#F8F8F8"
				}
			
		},
		{
			"path": "pages/zixun/zixun"
		},
		{
			"path": "pages/laws/laws",
			"style": {
				"backgroundColor":"#F8F8F8",
				"app-plus": {
					"titleNView": false //禁用原生导航栏
				}
			}
		},
		{
			"path": "pages/loge/loge",
