		// 	"text": "智能咨询",
		// 	"iconPath": "static/consult.png",
		// 	"iconWidth": "48px"

		// },
		"list": [{
				"text": "首页", //bar文本
				"pagePath": "pages/index/index", //导航路径
				"iconPath": "static/icon/home.png", //未选中图片
				"selectedIconPath": "static/icon/home-active.png" //已选中图片
			},
			
			{
				"text": "法律小知识",
				"pagePath": "pages/laws/laws",
